<mvc:View
	controllerName="com.thy.ux.annualleaveplanning.controller.PlanView"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns:core="sap.ui.core"
	xmlns="com.thy.ux.annualleaveplanning.ui"
>
	<Page
		id="LeaveManagementPage"
		binding="{planModel>/Page}"
		visible="{planModel>Visible}"
	>
		<header>
			<core:Fragment
				fragmentName="com.thy.ux.annualleaveplanning.view.fragment.PageHeader"
				type="XML"
			/>
		</header>
		<content>
			<core:Fragment
				fragmentName="com.thy.ux.annualleaveplanning.view.fragment.PageContent"
				type="XML"
			/>
		</content>
		<footer>
			<PageFooter active="{parts:[{path:'planModel>Header/PlanningEnabled'},{path:'planModel>Header/QuotaPlanned'}, {path:'planModel>Header/QuotaToBePlanned'}], formatter:'.formatter.decidePlanApproveStatus'}">
				<buttons>
					<Button
						icon="spp-fa-calendar-check"
                        class="spp-indigo"
						label="{i18n>sendForApproval}"
						raised="true"
						firstChild="true"
						lastChild="true"
						solid="true"
                        press=".onSendPlanForApproval"
					/>
				</buttons>
			</PageFooter>
		</footer>
		<modal>
			<Modal id="LeaveManagementPageModal"/>
		</modal>
	</Page>
</mvc:View>