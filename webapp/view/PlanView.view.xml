<mvc:View
	controllerName="com.thy.ux.annualleaveplanning.controller.PlanView"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns:core="sap.ui.core"
	xmlns="com.thy.ux.annualleaveplanning.ui"
>
	<Page
		id="LeaveManagementPage"
		binding="{planModel>/Page}"
		visible="{planModel>Visible}"
	>
		<header>
			<core:Fragment
				fragmentName="com.thy.ux.annualleaveplanning.view.fragment.PageHeader"
				type="XML"
			/>
		</header>
		<content>
			<core:Fragment
				fragmentName="com.thy.ux.annualleaveplanning.view.fragment.PageContent"
				type="XML"
			/>
		</content>
		<footer>
			<core:Fragment
				fragmentName="com.thy.ux.annualleaveplanning.view.fragment.PageFooter"
				type="XML"
			/>
		</footer>
		<datepicker>
			<DatePickerWidget id="LeaveManagementPageDatePicker"
				floating="true" visible="false" shared="true"/>
		</datepicker>
		<modal>
			<Modal id="LeaveManagementPageModal"/>
		</modal>
	</Page>
</mvc:View>