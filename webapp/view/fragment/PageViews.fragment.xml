<core:FragmentDefinition xmlns="com.thy.ux.annualleaveplanning.ui"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m">
    <PageViewContainer id="LeaveManagementPageViewContainer">
        <views>
            <PageView id="LeaveManagementPageViewYear" hidden="false" tabIndex="0" navigationActive="true" rerender="{planModel>legendChanged}">
                <content>
                    <PageViewYear id="LeaveManagementPageViewYearContent" year="{= parseInt(${planModel>period/year},10) }" />
                </content>
            </PageView>

            <PageView id="LeaveManagementPageViewMonth" hidden="true" tabIndex="1" navigationActive="true" rerender="{planModel>legendChanged}">
                <content>
                    <PageViewMonth id="LeaveManagementPageViewMonthContent" year="{= parseInt(${planModel>period/year},10) }" month="{= parseInt(${planModel>period/month},10) }" />
                </content>
            </PageView>

            <PageView id="LeaveManagementPageViewAgenda" hidden="true" tabIndex="2" navigationActive="true">
                <content>
                    <m:Text text="Agenda" />
                </content>
            </PageView>

            <PageView id="LeaveManagementPageViewHidden" hidden="true" tabIndex="-1" navigationActive="true" class="spp-hidden-view">
                <content>
                    <m:VBox width="100%" height="100%"/>
                </content>
            </PageView>

        </views>
    </PageViewContainer>
</core:FragmentDefinition>