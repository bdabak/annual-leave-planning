<core:FragmentDefinition xmlns="com.thy.ux.annualleaveplanning.ui"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout">
    <PageViewContainer id="LeaveManagementPageViewContainer">
        <views>
            <PageView id="LeaveManagementPageViewYear" hidden="false" tabIndex="0" navigationActive="true" viewType="year" rerender="{planModel>PageRenderChanged}" class="spp-yearview spp-daycellrenderer">
                <content>
                <PageViewYear id="LeaveManagementPageViewYearContent" year="{= parseInt(${planModel>Period/year},10) }" entitlementDate="{planModel>Header/QuotaAccrualBeginDate}" />
                    <!-- <l:VerticalLayout>
                        <l:content>
                            
                            <Button floating="true" icon="spp-fa-add" class="spp-blue" raised="false" solid="true" />
                        </l:content>
                    </l:VerticalLayout> -->
                </content>
            </PageView>

            <PageView id="LeaveManagementPageViewMonth" hidden="true" tabIndex="1" navigationActive="true" viewType="month" rerender="{planModel>PageRenderChanged}" class="spp-monthview spp-daycellrenderer">
                <content>
                    <PageViewMonth id="LeaveManagementPageViewMonthContent" year="{= parseInt(${planModel>Period/year},10) }" month="{= parseInt(${planModel>Period/month},10) }" rerender="{planModel>PageRenderChanged}" />
                </content>
            </PageView>

            <PageView id="LeaveManagementPageViewAgenda" hidden="true" tabIndex="2" navigationActive="true" viewType="agenda" rerender="{planModel>PageRenderChanged}" class="spp-daterangeowner spp-eventlist spp-agendaview spp-slide-vertical spp-gridbase spp-grid spp-grid-position spp-enable-sticky spp-grid-notextselection spp-fill-last-column">
                <content>
                    <PageViewAgenda id="LeaveManagementPageViewAgendaContent" period="{planModel>Period}" emptyText="{i18n>noEventsFound}" />
                </content>
            </PageView>

            <PageView id="LeaveManagementPageViewHidden" hidden="true" tabIndex="-1" navigationActive="true" class="spp-hidden-view">
                <content>
                    <m:VBox width="100%" height="100%"/>
                </content>
            </PageView>

        </views>
    </PageViewContainer>
</core:FragmentDefinition>