<core:FragmentDefinition xmlns="com.thy.ux.annualleaveplanning.ui"
    xmlns:core="sap.ui.core">
    <PageSidebar id="LeaveManagementPageSidebar" hidden="{= !${device>/system/desktop} }">
        <items>
            <Legend id="LeaveManagementPageLegend" items="{planModel>legend}"
            legendSelectionChanged=".onLegendSelectionChanged">
                <items>
                    <LegendItem id="LeaveManagementPageLegendItem"
                        color="{planModel>color}"
                        text="{planModel>text}" 
                        selected="{planModel>selected}"/>
                </items>
            </Legend>

            <StatisticCard id="LeaveManagementPageStats0" title="İzin Hakediş Tarihi"  value="{path:'planModel>header/entitlementDate', type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'dd MMMM YYYY'}}"  />
            <StatisticCard id="LeaveManagementPageStats1" title="Toplam Kota" theme="success" value="{path:'planModel>header/leaveQuotaBalance', type: 'sap.ui.model.type.Float', formatOptions:{maxFractionDigits:2, groupingEnabled: false, decimalSeparator:','}}"  />
            <StatisticCard id="LeaveManagementPageStats2"  title="Kullanılan İzin" theme="emphasize" value="{path:'planModel>header/leaveUsed', type: 'sap.ui.model.type.Float', formatOptions:{maxFractionDigits:2, groupingEnabled: false, decimalSeparator:','}}"  />
            <StatisticCard id="LeaveManagementPageStats3" title="Planlanacak İzin" theme="secondary" value="{path:'planModel>header/toBePlannedLeave', type: 'sap.ui.model.type.Float',formatOptions:{maxFractionDigits:2, groupingEnabled: false, decimalSeparator:','}}"  />
            <StatisticCard id="LeaveManagementPageStats4" title="Planlanan İzin" theme="primary" value="{path:'planModel>header/plannedLeave', type: 'sap.ui.model.type.Float',formatOptions:{maxFractionDigits:2, groupingEnabled: false, decimalSeparator:','}}"  />
        </items>
    </PageSidebar>
</core:FragmentDefinition>